/// The width of the screen
#define kScreenWidth [UIScreen mainScreen].bounds.size.width

/// The height of the screen
#define kScreenHeight [UIScreen mainScreen].bounds.size.height

/// Determine if it's an iPhone
#define kIs_iphone [[UIDevice currentDevice] userInterfaceIdiom] == UIUserInterfaceIdiomPhone

/// Check if it's an iphoneX or later
#define kIs_iPhoneXAndLater kScreenWidth >=375.0f && kScreenHeight >=812.0f&& kIs_iphone

/// The height of the tabbar
#define kTabBarHeight (CGFloat)(kIs_iPhoneXAndLater?(49.0 + 34.0):(49.0))

/// The height of the tabbar
#define kTabBarAreaHeight (CGFloat)(kIs_iPhoneXAndLater?(34.0):(0))

#define kFont_SystemDefault(fonts) [UIFont systemFontOfSize:fonts]

#define kDCEDefaultZoom 1.5

#define KDCEMaxZoom 5.0

#define kAutoZoomIsOpen NO

#define kZoomComponentBottomMargin 70.0

#define KCameraSettingAvailableHeight 60.0

#define kLeftMarginOfContainer 16.0

#define kRightMarginOfContainer 16.0

#define kCameraZoomFloatingLabelTextSize 12.0

#define kCameraZoomFloatingButtonWidth 35.0

#define kCameraZoomSliderViewHeight (80.0 + 35.0 + 15.0)

#define KCameraSettingTitleTextSize 17.0

#define kSwitchOnTintColor [UIColor colorWithRed:254/255.0 green:142/255.0 blue:20/255.0 alpha:1]

#define kSwitchOffTintColor [UIColor colorWithRed:50 / 255.0 green:50 / 255.0 blue:50 / 255.0 alpha:1]

