<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeneralSettings" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlActivated">@color/dy_orange</item>

        <item name="android:statusBarColor">@color/dy_black_2B</item>
        <item name="android:windowBackground">@color/dy_black_2B</item>
        <item name="actionBarItemBackground">@color/dy_black_2B</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.GeneralSettings.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.HomePage" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dy_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/dy_black_34</item>
        <item name="android:windowBackground">@color/dy_black_34</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.GeneralSettings.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GeneralSettings.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />
</resources>