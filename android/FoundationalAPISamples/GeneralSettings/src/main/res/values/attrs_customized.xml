<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="titleText" format="string" />
    <attr name="titleTextColor" format="color" />
    <attr name="tipMessage" format="string" />
    <attr name="title_padding_start" format="dimension" />
    <attr name="title_padding_end" format="dimension" />
    <attr name="titleHeight" format="dimension">
        <enum name="match_parent" value="-1" />
        <enum name="wrap_content" value="-2" />
    </attr>
    <attr name="titleWidth" format="dimension">
        <enum name="match_parent" value="-1" />
        <enum name="wrap_content" value="-2" />
    </attr>

    <declare-styleable name="ExpandLinearLayout">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="tipMessage" />
        <attr name="title_padding_start" />
        <attr name="title_padding_end" />
        <attr name="openAtFirst" format="boolean" />
        <attr name="android:background" />
        <attr name="type" format="enum">
            <enum name="arrow_only" value="0" />
            <enum name="switch_only" value="1" />
            <enum name="arrowAndSwitch" value="2" />
        </attr>
        <attr name="titleHeight" />
        <attr name="titleWidth" />
    </declare-styleable>

    <declare-styleable name="SingleLineLayout">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="tipMessage" />
        <attr name="title_padding_start" />
        <attr name="title_padding_end" />
        <attr name="singleLineMode">
            <flag name="arrow_next" value="0x1" />
            <flag name="button" value="0x2" />
            <flag name="edit_text" value="0x4" />
            <!--            <flag name="spinner" value="0x8"/>-->
            <flag name="switch_compat" value="0x10" />
            <flag name="check_box" value="0x20" />
        </attr>
        <attr name="buttonText" format="string" />
        <attr name="android:inputType" />
        <attr name="android:background" />
        <attr name="titleHeight" />
        <attr name="titleWidth" />
    </declare-styleable>

    <declare-styleable name="RadioGroupWithTitle">
        <attr name="titleText"/>
        <attr name="tipMessage"/>
        <attr name="optionTextArray" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomResultDisplayView">
        <attr name="needBtnExport" format="boolean" default="false" />
    </declare-styleable>

</resources>