<resources>
    <!-- Base application theme. -->
    <style name="Theme.FoundationalAPISamples" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dy_orange</item>
        <item name="colorPrimaryVariant">@color/dy_black_34</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="textAllCaps">false</item>
